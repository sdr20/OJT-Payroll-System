{"ast":null,"code":"export default {\n  name: 'EmployeeLeaveRequest',\n  data() {\n    return {\n      leaveDate: '',\n      reason: '',\n      statusMessage: '',\n      leaveRequests: [],\n      currentPage: 1,\n      requestsPerPage: 5\n    };\n  },\n  computed: {\n    totalPages() {\n      return Math.ceil(this.leaveRequests.length / this.requestsPerPage);\n    },\n    paginatedRequests() {\n      const start = (this.currentPage - 1) * this.requestsPerPage;\n      const end = start + this.requestsPerPage;\n      return this.leaveRequests.slice(start, end);\n    }\n  },\n  created() {\n    this.loadRequests();\n  },\n  methods: {\n    loadRequests() {\n      this.leaveRequests = JSON.parse(localStorage.getItem('leaveRequests')) || [];\n    },\n    submitLeaveRequest() {\n      if (!this.leaveDate || !this.reason) return;\n      const newRequest = {\n        id: Date.now(),\n        employeeName: 'John Doe',\n        // This should be dynamic based on logged-in user\n        leaveDate: this.leaveDate,\n        reason: this.reason,\n        status: 'Pending'\n      };\n      this.leaveRequests.unshift(newRequest);\n      localStorage.setItem('leaveRequests', JSON.stringify(this.leaveRequests));\n      this.statusMessage = 'Request submitted successfully!';\n      this.leaveDate = '';\n      this.reason = '';\n\n      // Reset to first page when adding new request\n      this.currentPage = 1;\n      setTimeout(() => {\n        this.statusMessage = '';\n      }, 3000);\n    },\n    nextPage() {\n      if (this.currentPage < this.totalPages) {\n        this.currentPage++;\n      }\n    },\n    previousPage() {\n      if (this.currentPage > 1) {\n        this.currentPage--;\n      }\n    }\n  }\n};","map":{"version":3,"names":["name","data","leaveDate","reason","statusMessage","leaveRequests","currentPage","requestsPerPage","computed","totalPages","Math","ceil","length","paginatedRequests","start","end","slice","created","loadRequests","methods","JSON","parse","localStorage","getItem","submitLeaveRequest","newRequest","id","Date","now","employeeName","status","unshift","setItem","stringify","setTimeout","nextPage","previousPage"],"sources":["C:\\Users\\ASUS\\Desktop\\Payroll_system\\frontend\\src\\views\\employee\\EmployeeLeaveRequest.vue"],"sourcesContent":["<template>\r\n  <div class=\"min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-1\">\r\n    <div class=\"max-w-6xl mx-auto\">\r\n      <div class=\"grid grid-cols-1 md:grid-cols-2 gap-6\">\r\n        <!-- Leave Request Form (unchanged) -->\r\n        <div class=\"bg-white p-6 rounded-xl shadow-md\">\r\n          <h2 class=\"text-2xl font-semibold mb-4\">Request Leave</h2>\r\n          \r\n          <form @submit.prevent=\"submitLeaveRequest\">\r\n            <div class=\"mb-4\">\r\n              <label class=\"block text-gray-700 font-medium mb-2\">Leave Date:</label>\r\n              <input \r\n                type=\"date\" \r\n                v-model=\"leaveDate\" \r\n                class=\"w-full p-2 border rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-300 outline-none\" \r\n                required\r\n              >\r\n            </div>\r\n\r\n            <div class=\"mb-4\">\r\n              <label class=\"block text-gray-700 font-medium mb-2\">Reason for Leave:</label>\r\n              <textarea \r\n                v-model=\"reason\" \r\n                class=\"w-full p-2 border rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-300 outline-none min-h-[100px]\" \r\n                required\r\n              ></textarea>\r\n            </div>\r\n\r\n            <button \r\n              type=\"submit\" \r\n              class=\"w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 transition-all duration-200 font-medium\"\r\n            >\r\n              Send Request\r\n            </button>\r\n          </form>\r\n\r\n          <div \r\n            v-if=\"statusMessage\" \r\n            class=\"mt-4 p-3 bg-blue-50 text-blue-700 rounded-lg text-center\"\r\n          >\r\n            {{ statusMessage }}\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Leave Requests List with Pagination -->\r\n        <div class=\"bg-white p-6 rounded-xl shadow-md\">\r\n          <h2 class=\"text-2xl font-semibold mb-4\">Leave Requests</h2>\r\n          \r\n          <div class=\"space-y-4\">\r\n            <div \r\n              v-for=\"request in paginatedRequests\" \r\n              :key=\"request.id\" \r\n              class=\"border rounded-lg p-4 hover:shadow-sm transition-all\"\r\n            >\r\n              <div class=\"flex justify-between items-start\">\r\n                <div>\r\n                  <h3 class=\"font-medium\">{{ request.employeeName }}</h3>\r\n                  <p class=\"text-sm text-gray-600\">\r\n                    {{ new Date(request.leaveDate).toLocaleDateString() }}\r\n                  </p>\r\n                  <p class=\"mt-2 text-gray-700\">{{ request.reason }}</p>\r\n                </div>\r\n                <span \r\n                  :class=\"{\r\n                    'bg-yellow-100 text-yellow-700': request.status === 'Pending',\r\n                    'bg-green-100 text-green-700': request.status === 'Approved',\r\n                    'bg-red-100 text-red-700': request.status === 'Rejected'\r\n                  }\"\r\n                  class=\"px-3 py-1 rounded-full text-sm font-medium\"\r\n                >\r\n                  {{ request.status }}\r\n                </span>\r\n              </div>\r\n            </div>\r\n            \r\n            <div \r\n              v-if=\"leaveRequests.length === 0\" \r\n              class=\"text-center text-gray-500 py-8\"\r\n            >\r\n              No leave requests yet\r\n            </div>\r\n\r\n            <!-- Pagination Controls -->\r\n            <div v-if=\"leaveRequests.length > 0\" class=\"mt-6 flex justify-between items-center\">\r\n              <button \r\n                @click=\"previousPage\" \r\n                :disabled=\"currentPage === 1\"\r\n                class=\"px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200\"\r\n              >\r\n                Previous\r\n              </button>\r\n              <span class=\"text-gray-600\">\r\n                Page {{ currentPage }} of {{ totalPages }}\r\n              </span>\r\n              <button \r\n                @click=\"nextPage\" \r\n                :disabled=\"currentPage === totalPages\"\r\n                class=\"px-4 py-2 bg-gray-100 text-gray-700 rounded-lg hover:bg-gray-200 disabled:opacity-50 disabled:cursor-not-allowed transition-all duration-200\"\r\n              >\r\n                Next\r\n              </button>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: 'EmployeeLeaveRequest',\r\n  data() {\r\n    return {\r\n      leaveDate: '',\r\n      reason: '',\r\n      statusMessage: '',\r\n      leaveRequests: [],\r\n      currentPage: 1,\r\n      requestsPerPage: 5\r\n    };\r\n  },\r\n  computed: {\r\n    totalPages() {\r\n      return Math.ceil(this.leaveRequests.length / this.requestsPerPage);\r\n    },\r\n    paginatedRequests() {\r\n      const start = (this.currentPage - 1) * this.requestsPerPage;\r\n      const end = start + this.requestsPerPage;\r\n      return this.leaveRequests.slice(start, end);\r\n    }\r\n  },\r\n  created() {\r\n    this.loadRequests();\r\n  },\r\n  methods: {\r\n    loadRequests() {\r\n      this.leaveRequests = JSON.parse(localStorage.getItem('leaveRequests')) || [];\r\n    },\r\n    submitLeaveRequest() {\r\n      if (!this.leaveDate || !this.reason) return;\r\n\r\n      const newRequest = {\r\n        id: Date.now(),\r\n        employeeName: 'John Doe', // This should be dynamic based on logged-in user\r\n        leaveDate: this.leaveDate,\r\n        reason: this.reason,\r\n        status: 'Pending'\r\n      };\r\n\r\n      this.leaveRequests.unshift(newRequest);\r\n      localStorage.setItem('leaveRequests', JSON.stringify(this.leaveRequests));\r\n\r\n      this.statusMessage = 'Request submitted successfully!';\r\n      this.leaveDate = '';\r\n      this.reason = '';\r\n\r\n      // Reset to first page when adding new request\r\n      this.currentPage = 1;\r\n\r\n      setTimeout(() => {\r\n        this.statusMessage = '';\r\n      }, 3000);\r\n    },\r\n    nextPage() {\r\n      if (this.currentPage < this.totalPages) {\r\n        this.currentPage++;\r\n      }\r\n    },\r\n    previousPage() {\r\n      if (this.currentPage > 1) {\r\n        this.currentPage--;\r\n      }\r\n    }\r\n  }\r\n};\r\n</script>"],"mappings":"AA8GA,eAAe;EACbA,IAAI,EAAE,sBAAsB;EAC5BC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,MAAM,EAAE,EAAE;MACVC,aAAa,EAAE,EAAE;MACjBC,aAAa,EAAE,EAAE;MACjBC,WAAW,EAAE,CAAC;MACdC,eAAe,EAAE;IACnB,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,UAAUA,CAAA,EAAG;MACX,OAAOC,IAAI,CAACC,IAAI,CAAC,IAAI,CAACN,aAAa,CAACO,MAAK,GAAI,IAAI,CAACL,eAAe,CAAC;IACpE,CAAC;IACDM,iBAAiBA,CAAA,EAAG;MAClB,MAAMC,KAAI,GAAI,CAAC,IAAI,CAACR,WAAU,GAAI,CAAC,IAAI,IAAI,CAACC,eAAe;MAC3D,MAAMQ,GAAE,GAAID,KAAI,GAAI,IAAI,CAACP,eAAe;MACxC,OAAO,IAAI,CAACF,aAAa,CAACW,KAAK,CAACF,KAAK,EAAEC,GAAG,CAAC;IAC7C;EACF,CAAC;EACDE,OAAOA,CAAA,EAAG;IACR,IAAI,CAACC,YAAY,CAAC,CAAC;EACrB,CAAC;EACDC,OAAO,EAAE;IACPD,YAAYA,CAAA,EAAG;MACb,IAAI,CAACb,aAAY,GAAIe,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,eAAe,CAAC,KAAK,EAAE;IAC9E,CAAC;IACDC,kBAAkBA,CAAA,EAAG;MACnB,IAAI,CAAC,IAAI,CAACtB,SAAQ,IAAK,CAAC,IAAI,CAACC,MAAM,EAAE;MAErC,MAAMsB,UAAS,GAAI;QACjBC,EAAE,EAAEC,IAAI,CAACC,GAAG,CAAC,CAAC;QACdC,YAAY,EAAE,UAAU;QAAE;QAC1B3B,SAAS,EAAE,IAAI,CAACA,SAAS;QACzBC,MAAM,EAAE,IAAI,CAACA,MAAM;QACnB2B,MAAM,EAAE;MACV,CAAC;MAED,IAAI,CAACzB,aAAa,CAAC0B,OAAO,CAACN,UAAU,CAAC;MACtCH,YAAY,CAACU,OAAO,CAAC,eAAe,EAAEZ,IAAI,CAACa,SAAS,CAAC,IAAI,CAAC5B,aAAa,CAAC,CAAC;MAEzE,IAAI,CAAC