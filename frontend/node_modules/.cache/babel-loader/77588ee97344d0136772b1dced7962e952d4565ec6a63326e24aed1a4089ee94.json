         <form @submit.prevent=\"submitLeaveRequest\">\r\n              <div class=\"mb-4\">\r\n                <label class=\"block text-gray-700 font-medium mb-2\">Leave Date:</label>\r\n                <input \r\n                  type=\"date\" \r\n                  v-model=\"leaveDate\" \r\n                  class=\"w-full p-2 border rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-300 outline-none\" \r\n                  required\r\n                >\r\n              </div>\r\n  \r\n              <div class=\"mb-4\">\r\n                <label class=\"block text-gray-700 font-medium mb-2\">Reason for Leave:</label>\r\n                <textarea \r\n                  v-model=\"reason\" \r\n                  class=\"w-full p-2 border rounded-lg focus:ring focus:ring-blue-200 focus:border-blue-300 outline-none min-h-[100px]\" \r\n                  required\r\n                ></textarea>\r\n              </div>\r\n  \r\n              <button \r\n                type=\"submit\" \r\n                class=\"w-full bg-blue-500 text-white py-3 rounded-lg hover:bg-blue-600 transition-all duration-200 font-medium\"\r\n              >\r\n                Send Request\r\n              </button>\r\n            </form>\r\n  \r\n            <div \r\n              v-if=\"statusMessage\" \r\n              class=\"mt-4 p-3 bg-blue-50 text-blue-700 rounded-lg text-center\"\r\n            >\r\n              {{ statusMessage }}\r\n            </div>\r\n          </div>\r\n  \r\n          <!-- Leave Requests List -->\r\n          <div class=\"bg-white p-6 rounded-xl shadow-md\">\r\n            <h2 class=\"text-2xl font-semibold mb-4\">Leave Requests</h2>\r\n            \r\n            <div class=\"space-y-4\">\r\n              <div \r\n                v-for=\"request in leaveRequests\" \r\n                :key=\"request.id\" \r\n                class=\"border rounded-lg p-4 hover:shadow-sm transition-all\"\r\n              >\r\n                <div class=\"flex justify-between items-start\">\r\n                  <div>\r\n                    <h3 class=\"font-medium\">{{ request.employeeName }}</h3>\r\n                    <p class=\"text-sm text-gray-600\">\r\n                      {{ new Date(request.leaveDate).toLocaleDateString() }}\r\n                    </p>\r\n                    <p class=\"mt-2 text-gray-700\">{{ request.reason }}</p>\r\n                  </div>\r\n                  <span \r\n                    :class=\"{\r\n                      'bg-yellow-100 text-yellow-700': request.status === 'Pending',\r\n                      'bg-green-100 text-green-700': request.status === 'Approved',\r\n                      'bg-red-100 text-red-700': request.status === 'Rejected'\r\n                    }\"\r\n                    class=\"px-3 py-1 rounded-full text-sm font-medium\"\r\n                  >\r\n                    {{ request.status }}\r\n                  </span>\r\n                </div>\r\n              </div>\r\n              \r\n              <div \r\n                v-if=\"leaveRequests.length === 0\" \r\n                class=\"text-center text-gray-500 py-8\"\r\n              >\r\n                No leave requests yet\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </template>\r\n  \r\n  <script>\r\n  export default {\r\n    name: 'EmployeeLeaveRequest',\r\n    data() {\r\n      return {\r\n        leaveDate: '',\r\n        reason: '',\r\n        statusMessage: '',\r\n        leaveRequests: []\r\n      };\r\n    },\r\n    created() {\r\n      // Load existing requests when component is created\r\n      this.loadRequests();\r\n    },\r\n    methods: {\r\n      loadRequests() {\r\n        this.leaveRequests = JSON.parse(localStorage.getItem('leaveRequests')) || [];\r\n      },\r\n      submitLeaveRequest() {\r\n        if (!this.leaveDate || !this.reason) return;\r\n  \r\n        const newRequest = {\r\n          id: Date.now(),\r\n          employeeName: 'John Doe', // This should be dynamic based on logged-in user\r\n          leaveDate: this.leaveDate,\r\n          reason: this.reason,\r\n          status: 'Pending'\r\n        };\r\n  \r\n        this.leaveRequests.unshift(newRequest); // Add to beginning of array\r\n        localStorage.setItem('leaveRequests', JSON.stringify(this.leaveRequests));\r\n  \r\n        this.statusMessage = 'Request submitted successfully!';\r\n        this.leaveDate = '';\r\n        this.reason = '';\r\n  \r\n        // Clear status message after 3 seconds\r\n        setTimeout(() => {\r\n          this.statusMessage = '';\r\n        }, 3000);\r\n      }\r\n    }\r\n  };\r\n  </script>"],"mappings":"AAyFE,eAAe;EACbA,IAAI,EAAE,sBAAsB;EAC5BC,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,SAAS,EAAE,EAAE;MACbC,MAAM,EAAE,EAAE;MACVC,aAAa,EAAE,EAAE;MACjBC,aAAa,EAAE;IACjB,CAAC;EACH,CAAC;EACDC,OAAOA,CAAA,EAAG;IACR;IACA,IAAI,CAACC,YAAY,CAAC,CAAC;EACrB,CAAC;EACDC,OAAO,EAAE;IACPD,YAAYA,CAAA,EAAG;MACb,IAAI,CAACF,aAAY,GAAII,IAAI,CAACC,KAAK,CAACC,YAAY,CAACC,OAAO,CAAC,eAAe,CAAC,KAAK,EAAE;IAC9E,CAAC;IACDC,kBAAkBA,CAAA,EAAG;MACnB,IAAI,CAAC,IAAI,CAACX,SAAQ,IAAK,CAAC,IAAI,CAACC,MAAM,EAAE;MAErC,MAAMW,UAAS,GAAI;QACjBC,EAAE,EAAEC,IAAI,CAACC,GAAG,CAAC,CAAC;QACdC,YAAY,EAAE,UAAU;QAAE;QAC1BhB,SAAS,EAAE,IAAI,CAACA,SAAS;QACzBC,MAAM,EAAE,IAAI,CAACA,MAAM;QACnBgB,MAAM,EAAE;MACV,CAAC;MAED,IAAI,CAACd,aAAa,CAACe,OAAO,CAACN,UAAU,CAAC,EAAE;MACxCH,YAAY,CAACU,OAAO,CAAC,eAAe,EAAEZ,IAAI,CAACa,SAAS,CAAC,IAAI,CAACjB,aAAa,CAAC,CAAC;MAEzE,IAAI,CAACD,aAAY,GAAI,iCAAiC;MACtD,IAAI,CAACF,SAAQ,GAAI,EAAE;MACnB,IAAI,CAACC,MAAK,GAAI,EAAE;;MAEhB;MACAoB,UAAU,CAAC,MAAM;QACf,IAAI,CAACnB,aAAY,GAAI,EAAE;MACzB,CAAC,EAAE,IAAI,CAAC;IACV;EACF;AACF,CAAC","ignoreList":[]},"metadata":{},"sourceType":"module","externalDependencies":[]}