edEmployee = employee;\n      this.showDetailsModal = true;\n    },\n    // View Request Info\n    viewRequestInfo(request) {\n      this.selectedRequest = {\n        ...request\n      };\n      this.showRequestModal = true;\n      this.isEditingRequest = false; // Reset editing mode\n    },\n    // Save Request Changes\n    saveRequestChanges() {\n      const index = this.pendingRequests.findIndex(req => req.id === this.selectedRequest.id);\n      if (index !== -1) {\n        this.pendingRequests[index] = {\n          ...this.selectedRequest\n        };\n      }\n      this.isEditingRequest = false; // Exit editing mode\n    },\n    // Approve Request\n    approveRequest(id) {\n      this.pendingRequests = this.pendingRequests.filter(req => req.id !== id);\n    },\n    // Reject Request\n    rejectRequest(id) {\n      this.pendingRequests = this.pendingRequests.filter(req => req.id !== id);\n    }\n  }\n};","map":{"version":3,"names":["data","employees","id","firstName","lastName","position","salary","email","contactInfo","deductions","sss","philhealth","pagibig","earnings","travelExpenses","otherEarnings","adminPositions","selectedEmployee","showEditModal","showDetailsModal","pendingRequests","name","positionApplied","contactNumber","status","selectedRequest","showRequestModal","isEditingRequest","methods","removeEmployee","filter","emp","editEmployee","employee","updateEmployee","index","findIndex","viewEmployeeDetails","viewRequestInfo","request","saveRequestChanges","req","approveRequest","rejectRequest"],"sources":["C:\\Users\\ASUS\\Desktop\\Payroll_system\\frontend\\src\\views\\admind\\ManageEmployees.vue"],"sourcesContent":["<template>\r\n  <div class=\"min-h-screen bg-gray-50 p-1\">\r\n    <div class=\"flex gap-6\">\r\n      <!-- Left side - Employee List -->\r\n      <div class=\"flex-1\">\r\n        <div class=\"bg-white rounded-xl shadow-sm overflow-hidden\">\r\n          <div class=\"p-6\">\r\n            <h2 class=\"text-s font-bold text-gray-800 mb-1\